<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                                    android:layout_margin="10dp"
>
    <LinearLayout
            android:id="@+id/cardview"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
            android:text="TextView"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/item_csName"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView"
            android:layout_gravity="center" android:cropToPadding="false" android:padding="10dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/item_pdName"
            android:gravity="center" android:textColor="#000000" android:textSize="18sp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/item_price" android:textSize="14sp"
                android:textColor="#D22C20"/>
        <TextView
                android:text="1+1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/item_1pl1" android:textSize="14sp"
                android:textColor="#038A49" android:paddingLeft="12dp"/>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>